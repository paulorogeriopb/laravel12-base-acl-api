{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "version": "0.0.2",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "commit": "cz",
        "release": "standard-version",
        "release:msg": "node release-with-msg.js",
        "release:push": "npm run release:msg && git push && git push --tags",
        "release:minor:push": "npm run release:msg -- minor && git push && git push --tags",
        "release:major:push": "npm run release:msg -- major && git push && git push --tags"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable",
            "config": "./.cz-config.js"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.8.2",
        "commitizen": "^4.3.1",
        "concurrently": "^9.0.1",
        "cz-customizable": "^7.4.0",
        "standard-version": "^9.5.0",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    }
}
